<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialogback</item>
    </style>

    <style name="shahrmatnstyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="cardstyle" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>

    </style>


    <style name="titlestyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="matns">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="txtbotons">
        <item name="android:textColor">@color/new5</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="actionbartxttitle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="kodstextsize">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="smalltext">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>