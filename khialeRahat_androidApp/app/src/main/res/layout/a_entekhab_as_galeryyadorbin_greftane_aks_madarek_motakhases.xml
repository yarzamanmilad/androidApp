<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/background_aksgrftan_crdview"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/crdbtn_ensraf_grftanaks_etsalat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_aksgrftan_crdview">
            <TextView
                android:id="@+id/textView18"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:paddingTop="5dp"
                android:background="@color/background_aksgrftan_crdview"
                android:text="ارسال عکس"
                android:textAlignment="center"
                android:textSize="11dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/khakestary"
                app:layout_constraintBottom_toTopOf="@+id/btn_bazkardandorbin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/btn_bazkardandorbin"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/background_aksgrftan_crdview"
                android:text="باز کردن دوربین"
                app:layout_constraintBottom_toTopOf="@+id/imageView23"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/khakestary"
                app:layout_constraintBottom_toTopOf="@+id/btn_entkhabaksasgalery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/btn_entkhabaksasgalery"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/background_aksgrftan_crdview"
                android:text="انتخاب از گالری عکس"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/crdbtn_ensraf_grftanaks_etsalat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="60dp"

        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انصراف"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gherme" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>