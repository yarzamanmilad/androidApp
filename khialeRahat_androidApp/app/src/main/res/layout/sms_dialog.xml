<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/smsdialog_conslay2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shap_with_strok_and_radious"
            android:elevation="4dp"
            android:translationZ="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/smsdialog_edt_codetaaid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shap_with_strok_and_radious"
                android:elevation="8dp"
                android:hint="کد تایید"
                android:paddingRight="16dp"
                android:textAlignment="center"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <TextView
                android:id="@+id/smsdialog_chornometer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:translationZ="8dp"
                android:elevation="4dp"
                android:background="@drawable/shap_with_strok_and_radious_circle"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/smsdialog_edt_codetaaid"
                app:layout_constraintStart_toStartOf="@+id/smsdialog_edt_codetaaid"
                app:layout_constraintTop_toBottomOf="@+id/smsdialog_edt_codetaaid" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/sms_dialog_btn_taaid"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shap_with_strok_and_radious"
                android:text="تایید"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/smsdialog_chornometer" />

            <TextView
                android:id="@+id/sms_dialog_txt_ersalMojadad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ارسال مجدد"
                android:textColor="@color/red"
                app:layout_constraintEnd_toEndOf="@+id/sms_dialog_btn_taaid"
                app:layout_constraintStart_toStartOf="@+id/sms_dialog_btn_taaid"
                app:layout_constraintTop_toBottomOf="@+id/sms_dialog_btn_taaid" />

            <TextView
                android:id="@+id/sms_dialog_txt_virayesh_shomareh"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:text="ویرایش شماره"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/sms_dialog_btn_taaid"
                app:layout_constraintStart_toStartOf="@+id/sms_dialog_btn_taaid"
                app:layout_constraintTop_toBottomOf="@+id/sms_dialog_txt_ersalMojadad" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/hkrsabz"
                android:translationZ="8dp"
                android:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>